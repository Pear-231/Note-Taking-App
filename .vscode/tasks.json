{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "frontend: vite dev",
			"type": "shell",
			"command": "npm run dev",
			"options": {
				"cwd": "${workspaceFolder}/Frontend"
			},
			"isBackground": true,
			"problemMatcher": [
				{
					"owner": "vite",
					"severity": "info",
					"pattern": [
						{
							"regexp": "^(.*)$",
							"file": 0,
							"line": 0,
							"message": 1
						}
					],
					"background": {
						"activeOnStart": true,
						"beginsPattern": "VITE\\s+v.*",
						"endsPattern": "http://localhost:5173"
					}
				}
			]
		}
	]
}
